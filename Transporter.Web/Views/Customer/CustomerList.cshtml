@model IEnumerable<Transporter.Web.Models.Customer>

<h2>List of customers</h2>

@if (Model.Count() == 0)
{
    <p>No data in the database</p>
}
else
{
    <table border="1">
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().Adress)</th>
            <th>Datasheet</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(m => item.Name)</td>
            <td>@Html.DisplayFor(m => item.Adress)</td>
            <td>@Html.ActionLink("[SHOW]", "Details", new { id = item.Id })</td>
            <td>@Html.ActionLink("[DEL]", "Remove", new { id = item.Id })</td>
            <td>@Html.ActionLink("[EDIT]", "Edit", new { id = item.Id })</td>
        </tr>
        }
    </table>
}
